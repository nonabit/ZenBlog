---
import { Image } from 'astro:assets';
import { RiLink, RiMailLine, RiMapPinLine } from '@remixicon/react';
import type { TranslationDictionary } from '@/shared/i18n/types';

interface Props {
  t: TranslationDictionary;
}

const { t } = Astro.props;

// R2 CDN 头像 URL
const AVATAR_URL = 'https://cdn.ninthbit.org/avatar.jpg';
---

<div class="md:col-span-1">
  <div class="sticky top-24">
    <div class="relative w-32 h-32 mb-8 overflow-hidden rounded-2xl bg-zinc-100 dark:bg-zinc-800">
      <Image src={AVATAR_URL} alt="Avatar" class="object-cover w-full h-full" width={400} height={400} format="png" quality={100} />
    </div>

    <h1 class="font-heading text-3xl font-normal text-zinc-900 dark:text-zinc-100 mb-4">
      {t['about.name']}
    </h1>

    <div class="text-zinc-500 dark:text-zinc-400 text-sm space-y-3 mb-8">
      <div class="flex items-center gap-2">
        <RiMapPinLine size={16} />
        <span>{t['about.location']}</span>
      </div>
      <div class="flex items-center gap-2">
        <RiMailLine size={16} />
        <span>oldmeatovo@gmail.com</span>
      </div>
      <div class="flex items-center gap-2">
        <RiLink size={16} />
        <a href="https://github.com/nonabit" class="hover:underline">99byte</a>
      </div>
    </div>

    <p class="font-light text-zinc-600 dark:text-zinc-400 leading-relaxed mb-6">
      {t['about.motto']}
    </p>
  </div>
</div>
