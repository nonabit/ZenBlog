---
import type { TranslationDictionary } from '@/shared/i18n/types';

interface Props {
  t: TranslationDictionary;
}

const { t } = Astro.props;

const gears = [
  { label: t['about.gear.editor'], value: 'Zed + Neovim' },
  { label: t['about.gear.terminal'], value: 'Warp / Ghostty' },
  { label: t['about.gear.hardware'], value: 'MacBook Pro M4 16"' },
];
---

<section>
  <h2 class="font-heading text-2xl font-medium text-zinc-900 dark:text-zinc-100 mb-6">
    {t['about.gear']}
  </h2>

  <div class="grid grid-cols-2 gap-4">
    {
      gears.map((gear) => (
        <div class="p-4 rounded-xl bg-zinc-50 dark:bg-zinc-900 border border-zinc-100 dark:border-zinc-800">
          <div class="text-xs font-mono text-zinc-400 mb-1">{gear.label}</div>
          <div class="font-medium">{gear.value}</div>
        </div>
      ))
    }
  </div>
</section>
