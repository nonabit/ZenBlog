---
import type { TranslationDictionary } from '@/shared/i18n/types';

interface Props {
  t: TranslationDictionary;
}

const { t } = Astro.props;

const paragraphs = [
  t['about.intro.p1'],
  t['about.intro.p2'],
  t['about.intro.p3'],
  t['about.intro.p4'],
  t['about.intro.p5'],
  t['about.intro.p6'],
  t['about.intro.p7'],
  t['about.intro.quote'],
];
---

<section>
  <h2 class="font-heading text-2xl font-normal mb-6 text-zinc-900 dark:text-zinc-100">
    {t['about.intro.title']}
  </h2>
  <div class="font-light space-y-4 text-zinc-600 dark:text-zinc-400 leading-relaxed">
    {
      paragraphs.map((paragraph) => (
        <p>{paragraph}</p>
      ))
    }
  </div>
</section>
