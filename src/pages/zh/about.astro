---
import { SITE_TITLE } from '@/consts';
import { AboutPageContent } from '@/features/about';
import PageShell from '@/shared/components/layout/PageShell.astro';
import { getTranslationDictionary } from '@/shared/i18n/types';

const lang = 'zh' as const;
const t = getTranslationDictionary(lang);
---

<PageShell
  lang={lang}
  title={`${t['nav.about']} | ${SITE_TITLE}`}
  description="More about me and my journey."
  currentPath="/zh/about"
  mainClass="relative z-10"
>
  <AboutPageContent t={t} />
</PageShell>
