---
import { SITE_TITLE } from '@/consts';
import { BlogListSection } from '@/features/blog';
import { getBlogListByLang } from '@/features/blog/server';
import PageShell from '@/shared/components/layout/PageShell.astro';
import { getTranslationDictionary } from '@/shared/i18n/types';

const lang = 'zh' as const;
const t = getTranslationDictionary(lang);
const posts = await getBlogListByLang(lang);
---

<PageShell
  lang={lang}
  title={`${t['nav.blog']} | ${SITE_TITLE}`}
  description={t['blog.description']}
  currentPath="/zh/blog"
  mainClass="max-w-5xl mx-auto px-6 py-12 sm:py-20 relative z-10"
>
  <BlogListSection client:load posts={posts} lang={lang} t={t} />
</PageShell>
