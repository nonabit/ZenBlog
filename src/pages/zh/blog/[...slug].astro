---
import { type CollectionEntry, getCollection } from "astro:content";
import BlogPost from "../../../layouts/BlogPost.astro";

export async function getStaticPaths() {
	// 只获取中文文章（zh/ 目录下的文章）
	const posts = (await getCollection("blog")).filter(
		(post: CollectionEntry<"blog">) => post.id.startsWith("zh/")
	);
	return posts.map((post: CollectionEntry<"blog">) => {
		// 从 "zh/my-2025-summary.md" 提取 "my-2025-summary"
		const slug = post.id.replace(/^zh\//, "").replace(/\.[^/.]+$/, "");
		return {
			params: { slug },
			props: post,
		};
	});
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await post.render();
// 获取当前文章的 slug（不含语言前缀）
const currentSlug = post.id.replace(/^zh\//, "").replace(/\.[^/.]+$/, "");
---

<BlogPost {...post.data} slug={currentSlug}>
	<Content />
</BlogPost>
