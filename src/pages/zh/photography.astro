---
import { SITE_TITLE } from '@/consts';
import { PhotographyGallery } from '@/features/photography';
import { getPhotographyDateGroups } from '@/features/photography/server';
import PageShell from '@/shared/components/layout/PageShell.astro';
import { getTranslationDictionary } from '@/shared/i18n/types';

const lang = 'zh' as const;
const t = getTranslationDictionary(lang);
const groups = await getPhotographyDateGroups(lang);
---

<PageShell
  lang={lang}
  title={`${t['nav.photography']} | ${SITE_TITLE}`}
  description={t['photography.description']}
  currentPath="/zh/photography"
  mainClass="max-w-[84rem] mx-auto px-6 py-12 sm:py-20 relative z-10"
>
  <PhotographyGallery client:load groups={groups} t={t} />
</PageShell>
