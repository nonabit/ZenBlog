---
import BaseHead from '../components/BaseHead.astro';
import FusionHeader from '../components/react/FusionHeader';
import { SITE_TITLE } from '../consts';
import { Disc, BookOpen, MapPin, Zap } from 'lucide-react';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Now | ${SITE_TITLE}`} description="What I'm doing now." />
        <script is:inline>
			const theme = (() => {
				if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
					return localStorage.getItem('theme');
				}
				if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
					return 'dark';
				}
				return 'light';
			})();
			if (theme === 'dark') {
				document.documentElement.classList.add('dark');
			} else {
				document.documentElement.classList.remove('dark');
			}
		</script>
	</head>
	<body class="bg-white dark:bg-black transition-colors duration-500">
		
