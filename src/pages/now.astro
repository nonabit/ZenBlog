---
import BaseHead from "../components/BaseHead.astro";
import FusionHeader from "../components/react/FusionHeader.tsx";
import FusionFooter from "../components/react/FusionFooter.tsx";
import SiliconBackground from "../components/react/SiliconBackground.tsx";
import NowContent from "../components/react/NowContent.tsx";
import { SITE_TITLE } from "../consts";
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <BaseHead title={`Now | ${SITE_TITLE}`} description="What I'm doing now." />
    <script is:inline>
      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();
      if (theme === "dark") {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
  </head>
  <body class="bg-white dark:bg-black transition-colors duration-500">
    <SiliconBackground client:load />
    <FusionHeader client:load transition:persist />

    <main class="max-w-screen-md mx-auto px-6 py-12 sm:py-20 relative z-10">
      <NowContent client:load />
    </main>

    <FusionFooter client:visible />
  </body>
</html>
