---
/**
 * 编辑文章页
 * Backstage 风格
 * 使用 SSR 模式以支持动态 slug 路由
 */

import { readBlogPost, listBlogPosts } from "../../../lib/cms/fs-manager";
import CMSLayout from "../../../components/cms/CMSLayout";
import PostForm from "../../../components/cms/PostForm";

// 禁用预渲染，使用 SSR 模式
// 这样 slug 重命名后无需重启服务器
export const prerender = false;

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect("/admin/posts");
}

const post = await readBlogPost(slug);

if (!post) {
  return Astro.redirect("/admin/posts");
}

// 获取最近文章用于侧边栏
const posts = await listBlogPosts();
const recentPosts = posts.slice(0, 8).map(p => ({ slug: p.slug, title: p.title }));

// 准备初始数据
const initialData = {
  title: post.title,
  description: post.description,
  pubDate: post.pubDate,
  heroImage: post.heroImage || "",
  showOnHome: post.showOnHome,
  content: post.content,
};
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{post.title} - Silicon Universe</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="bg-white text-zinc-900">
    <CMSLayout recentPosts={recentPosts} currentSlug={slug} client:load>
      <PostForm mode="edit" slug={slug} initialData={initialData} client:load />
    </CMSLayout>
  </body>
</html>
