---
/**
 * CMS 仪表盘页面
 * Backstage 风格 - 简约统计展示
 */

import { listBlogPosts } from "../../lib/cms/fs-manager";
import CMSLayout from "../../components/cms/CMSLayout";
import HeaderBar from "../../components/cms/HeaderBar";
import { FileText, Plus, ArrowRight } from "lucide-react";

// 仅在开发环境可用
if (import.meta.env.PROD) {
  return Astro.redirect("/");
}

// 获取数据
const posts = await listBlogPosts();
const recentPosts = posts.slice(0, 8).map(p => ({ slug: p.slug, title: p.title }));
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard - Silicon Universe</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="bg-white text-zinc-900">
    <CMSLayout recentPosts={recentPosts} client:load>
      <HeaderBar greeting="Hi, Admin." client:load />

      <div class="p-6">
        <!-- 统计概览 -->
        <div class="mb-8">
          <h2 class="text-sm font-medium text-zinc-400 uppercase tracking-wider mb-4">
            Overview
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <!-- 文章统计 -->
            <div class="p-6 border border-zinc-200 rounded-lg">
              <div class="flex items-center justify-between mb-4">
                <FileText size={20} className="text-zinc-400" />
                <a
                  href="/admin/posts/new"
                  class="p-1.5 text-zinc-400 hover:text-zinc-600 hover:bg-zinc-100 rounded transition-colors"
                >
                  <Plus size={16} />
                </a>
              </div>
              <div class="text-3xl font-bold text-zinc-900 mb-1">
                {posts.length}
              </div>
              <p class="text-sm text-zinc-500">Total posts</p>
            </div>

            <!-- 最近发布 -->
            <div class="p-6 border border-zinc-200 rounded-lg">
              <div class="flex items-center justify-between mb-4">
                <span class="text-zinc-400 text-sm">Latest</span>
              </div>
              {posts.length > 0 ? (
                <div>
                  <p class="font-medium text-zinc-900 truncate mb-1">
                    {posts[0].title}
                  </p>
                  <p class="text-sm text-zinc-500">{posts[0].pubDate}</p>
                </div>
              ) : (
                <p class="text-zinc-400">No posts yet</p>
              )}
            </div>

            <!-- 快捷操作 -->
            <div class="p-6 border border-zinc-200 rounded-lg">
              <div class="flex items-center justify-between mb-4">
                <span class="text-zinc-400 text-sm">Quick actions</span>
              </div>
              <div class="space-y-2">
                <a
                  href="/admin/posts/new"
                  class="flex items-center gap-2 text-sm text-zinc-600 hover:text-zinc-900 transition-colors"
                >
                  <Plus size={14} />
                  <span>New post</span>
                </a>
                <a
                  href="/admin/posts"
                  class="flex items-center gap-2 text-sm text-zinc-600 hover:text-zinc-900 transition-colors"
                >
                  <ArrowRight size={14} />
                  <span>All posts</span>
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- 最近文章列表 -->
        {posts.length > 0 && (
          <div>
            <div class="flex items-center justify-between mb-4">
              <h2 class="text-sm font-medium text-zinc-400 uppercase tracking-wider">
                Recent Posts
              </h2>
              <a
                href="/admin/posts"
                class="text-sm text-zinc-500 hover:text-zinc-900 transition-colors"
              >
                View all
              </a>
            </div>
            <div class="border border-zinc-200 rounded-lg overflow-hidden">
              {posts.slice(0, 5).map((post, index) => (
                <a
                  href={`/admin/posts/${post.slug}`}
                  class={`flex items-center justify-between px-4 py-3 hover:bg-zinc-50 transition-colors ${
                    index !== 0 ? "border-t border-zinc-100" : ""
                  }`}
                >
                  <div class="flex items-center gap-3 min-w-0">
                    <FileText size={16} className="text-zinc-400 shrink-0" />
                    <span class="truncate text-zinc-900">{post.title}</span>
                  </div>
                  <span class="text-sm text-zinc-400 shrink-0 ml-4">
                    {post.pubDate}
                  </span>
                </a>
              ))}
            </div>
          </div>
        )}
      </div>
    </CMSLayout>
  </body>
</html>
