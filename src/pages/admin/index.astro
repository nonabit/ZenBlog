---
/**
 * CMS 仪表盘页面
 * 显示文章和项目统计
 */

import { listBlogPosts, listProjects } from "../../lib/cms/fs-manager";
import CMSLayout from "../../components/cms/CMSLayout";
import { FileText, FolderKanban, Plus, ArrowRight } from "lucide-react";

// 仅在开发环境可用
if (import.meta.env.PROD) {
  return Astro.redirect("/");
}

// 获取数据
const posts = await listBlogPosts();
const projects = await listProjects();
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>仪表盘 - ZenBlog CMS</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="bg-zinc-50 dark:bg-zinc-950 text-zinc-900 dark:text-zinc-100">
    <CMSLayout title="仪表盘" client:load>
      <div class="space-y-8">
        <!-- 统计卡片 -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- 文章统计 -->
          <div class="bg-white dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-800 rounded-xl p-6">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/30 rounded-xl flex items-center justify-center">
                <FileText size={24} class="text-blue-600 dark:text-blue-400" />
              </div>
              <a
                href="/admin/posts/new"
                class="p-2 text-zinc-400 hover:text-zinc-600 dark:hover:text-zinc-300 hover:bg-zinc-100 dark:hover:bg-zinc-800 rounded-lg transition-colors"
                title="新建文章"
              >
                <Plus size={20} />
              </a>
            </div>
            <div class="text-3xl font-bold text-zinc-900 dark:text-zinc-100 mb-1">
              {posts.length}
            </div>
            <p class="text-zinc-500 dark:text-zinc-400">篇文章</p>
            <a
              href="/admin/posts"
              class="mt-4 flex items-center gap-1 text-sm text-blue-600 dark:text-blue-400 hover:underline"
            >
              查看全部 <ArrowRight size={14} />
            </a>
          </div>

          <!-- 项目统计 -->
          <div class="bg-white dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-800 rounded-xl p-6">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-orange-100 dark:bg-orange-900/30 rounded-xl flex items-center justify-center">
                <FolderKanban size={24} class="text-orange-600 dark:text-orange-400" />
              </div>
              <a
                href="/admin/projects/new"
                class="p-2 text-zinc-400 hover:text-zinc-600 dark:hover:text-zinc-300 hover:bg-zinc-100 dark:hover:bg-zinc-800 rounded-lg transition-colors"
                title="新建项目"
              >
                <Plus size={20} />
              </a>
            </div>
            <div class="text-3xl font-bold text-zinc-900 dark:text-zinc-100 mb-1">
              {projects.length}
            </div>
            <p class="text-zinc-500 dark:text-zinc-400">个项目</p>
            <a
              href="/admin/projects"
              class="mt-4 flex items-center gap-1 text-sm text-orange-600 dark:text-orange-400 hover:underline"
            >
              查看全部 <ArrowRight size={14} />
            </a>
          </div>
        </div>

        <!-- 最近文章 -->
        {posts.length > 0 && (
          <div class="bg-white dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-800 rounded-xl overflow-hidden">
            <div class="px-6 py-4 border-b border-zinc-200 dark:border-zinc-800 flex items-center justify-between">
              <h2 class="font-medium text-zinc-900 dark:text-zinc-100">最近文章</h2>
              <a href="/admin/posts" class="text-sm text-blue-600 dark:text-blue-400 hover:underline">
                查看全部
              </a>
            </div>
            <div class="divide-y divide-zinc-200 dark:divide-zinc-800">
              {posts.slice(0, 5).map((post) => (
                <a
                  href={`/admin/posts/${post.slug}`}
                  class="flex items-center justify-between px-6 py-4 hover:bg-zinc-50 dark:hover:bg-zinc-800/50 transition-colors"
                >
                  <div>
                    <h3 class="font-medium text-zinc-900 dark:text-zinc-100">{post.title}</h3>
                    <p class="text-sm text-zinc-500 dark:text-zinc-400">{post.pubDate}</p>
                  </div>
                  <ArrowRight size={16} class="text-zinc-400" />
                </a>
              ))}
            </div>
          </div>
        )}
      </div>
    </CMSLayout>

    <script>
      // 主题初始化
      const theme = localStorage.getItem("theme");
      if (theme === "dark" || (!theme && window.matchMedia("(prefers-color-scheme: dark)").matches)) {
        document.documentElement.classList.add("dark");
      }
    </script>
  </body>
</html>
